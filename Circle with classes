import math

class Circle():
  def __init__(self, radius):
    self.radius = radius
  def area(self):
    return math.pi * self.radius ** 2
  def perimeter(self):
    return 2 * math.pi * self.radius
a = int(input("Enter desired circle radius"))
x = Circle(a)
print("Area -",x.area())
print("Perimeter -",x.perimeter())
